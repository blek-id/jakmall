.back-text
    margin-left: 10px

.header-text
    color: #ffa642
    @media (min-width: 1024px)
        font-size: 2.5vw

.header-text__summary
    margin-bottom: 0
    @media (min-width: 1024px)
        font-size: 2vw

.header-text__underline
    border-bottom: 4px solid #eff0ef
    display: inline-block
    line-height: 0.95
    width: 100%

    @media (min-width: 1024px)
        width: auto
        padding-right: 30px

.navigator
    padding-top: 3%
    width: fit-content
    height: auto
    cursor: pointer

    @media (min-width: 768px)
        padding-top: 1%