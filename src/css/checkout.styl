body
    background-color: #fdf5d6
    font-family: 'Open Sans', sans-serif
    color: #707070

.checkout
    display: flex
    flex-direction: column
    background-color: #fdf5d6
    margin: auto
    margin: 5%
    background-color: white
    -webkit-box-shadow: 0px 2px 5px -1px rgba(231,166,26,0.5);
    -moz-box-shadow: 0px 2px 5px -1px rgba(231,166,26,0.5);
    box-shadow: 0px 2px 5px -1px rgba(231,166,26,0.5);
    height: auto
    border-radius: 5px
    padding: 0 3%
    
.content
    display: flex
    flex-direction: column
    padding: 3% 0 0

    @media (min-width: 1024px)
        flex-direction: row
        padding: 1% 0 3% 0

.progress
    display: flex
    align-items: center
    justify-content: space-between
    background-color: #fdf5d6 
    text-align: center
    width: 70%
    margin: auto
    margin-top: -5%
    margin-bottom: 0
    padding: 3.5% 5% 2.5% 5%
    border-radius: 5vw

    @media (min-width: 768px)
        width: 60%

    @media (min-width: 1024px)
        width: 40%

.progress--item
    display: inline-flex
    flex: 1
    align-items: center
    justify-content: center
    font-size: 3vw
    
    @media (min-width: 768px)
        font-size: 2vw

    @media (min-width: 1024px)
        font-size: 1.5vw

.progress--item span 
    color: #ffa642

.progress--separator
    color: #ffa642
    flex: 1

.circle
    display: inline-flex
    padding: 0.5vw
    border-radius: 50%
    margin-right: 0.5vw
    color: #ffa642
    background: #ffe3b9
    text-align: center
    align-items: center
    justify-content: center
    vertical-align: middle
    min-width 1em
    font-weight: bold

.circle__active
    color: white
    background: #ffa642

