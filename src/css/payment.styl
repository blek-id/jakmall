.radio--item
    display: flex
    flex: 1
    border: 1px solid lightgray
    cursor: pointer
    padding: 0px 15px
    margin-bottom: 15px
    height: 84px
    justify-content: center
    align-items: center

    @media (min-width:1024px)
        max-width: 180px
        margin-right: 15px
        margin-bottom: 0

.radio
    display: flex
    flex-direction: column
    align-items: stretch
    justify-content: center

    @media (min-width:1024px)
        flex-direction: row
        margin-bottom: 30px

.radio-item__active
    border: 1px solid #1ad86d
    background-color: #e9fcf2

.radio--text
    flex: 8

.radio--icon
    flex: 1
    margin: auto
    color : #1ad86d