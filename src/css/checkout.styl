.content--back
    flex: 1

.content--body
    flex: 3

    @media (min-width: 1024px)
        display:flex
        flex-direction: column
    
.content--separator
    flex: 1
    border-bottom: 5px solid #fff4e9
    border-radius: 5px
    
    @media (min-width: 1024px)
        max-width: 5px
        background-color: #fff4e9

.content--summary
    flex: 1
    display: flex
    flex-direction: column
    
    @media (min-width: 1024px)
        flex: 1
        margin-left: 15px

.container
    display: flex
    flex-direction: column

.detail-container
    display: flex
    flex-direction: column
    
    @media (min-width: 768px)
        flex: 5