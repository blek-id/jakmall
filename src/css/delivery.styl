.content--column__header
    @media(min-width:1024px)
        flex: 3 !important

.content--row
    display: flex
    flex-direction: column

    @media (min-width: 1024px)
        flex-direction: row
        margin-bottom: 15px

.content--row__vertical
    @media (min-width: 1024px)
        flex-direction: column

.content--column__disabled
    background-color: rgb(235, 235, 228);

.summary-box
    flex: 2
    min-height: 150px

.pricing-box
    display: flex
    flex-direction: column
    flex: 1
    margin-bottom: 15px

.column-right-text
    float: right
    font-weight: bold

.input-field
    position: relative
    border: 0
    height: 16vw
    width: 100%
    padding-left: 10px
    margin-top: 2vw
    font-size: 5vw
    
    @media (min-width: 768px)
        height: 8vw
        font-size: 3vw

        
    @media (min-width: 1024px)
        height: 5vw
        font-size: 2vw;
    
.input-field::placeholder
    opacity: 0

.input-field:focus + .input-field--placeholder,
.input-field:not(:placeholder-shown) + .input-field--placeholder
    font-size: 75%
    transform: translate3d(0, -120%, 0)
    opacity: 1

    @media (min-width: 768px)
        transform: translate3d(0, -150%, 0)

    @media (min-width: 1024px)
        transform: translate3d(0, -160%, 0)


.input-field--placeholder
    position: absolute
    left: 10px
    transition: all 200ms
    opacity: 0.5

.input-field--placeholder__textarea
    line-height: 65%

.input-field:focus + .input-field--placeholder__textarea,
.input-field:not(:placeholder-shown) + .input-field--placeholder__textarea
    font-size: 75%
    transform: translate3d(0, -700%, 0)
    opacity: 1

.input-field:focus
    outline: none
    
.input-field__textarea
    margin-top: 4vw
    height: 100px
    resize: none
    overflow: hidden

    @media (min-width: 768px)
        margin-top: 4vw
        
    @media (min-width: 1024px)
        height: 120px
        margin-top: 9%

.content--column__invalid
    border: 1px solid #ff811a !important
    -webkit-box-shadow: 0px 1px 2px 0px rgba(255,129,26,1) !important
    -moz-box-shadow: 0px 1px 2px 0px rgba(255,129,26,1) !important
    box-shadow: 0px 1px 2px 0px rgba(255,129,26,1) !important

.content--column__valid
    border: 1px solid #1ad86d !important
    -webkit-box-shadow: 0px 1px 2px 0px rgba(26,216,109,1) !important
    -moz-box-shadow: 0px 1px 2px 0px rgba(26,216,109,1) !important
    box-shadow: 0px 1px 2px 0px rgba(26,216,109,1) !important

.active-field
    outline: none 
    margin-top: -16px
    font-size: 0.8rem

.content--column__checkbox
    @media (min-width: 1024px)
        flex: 2 !important

.content--column
    display: flex
    position: relative
    flex: 1
    align-items: center
    margin-bottom: 15px

    @media (min-width: 1024px)
        margin-bottom: 0
        margin-right: 20px

.content--column__neutral
    border: 1px solid #e3e3e3
    -webkit-box-shadow: 0px 1px 2px 0px rgba(227,227,227,1)
    -moz-box-shadow: 0px 1px 2px 0px rgba(227,227,227,1)
    box-shadow: 0px 1px 2px 0px rgba(227,227,227,1)

.icon__success 
    color: #1ad86d

.icon
    padding: 8px
    text-align: center

.icon__fail
    color: #ff811a

.button-primary
    background-color: #ffa642
    color: white
    border: 0
    padding: 20px 10px
    border-radius: 5px
    width: 100%

.text-valid
    color: #1ad86d

.text-invalid
    color: #ff811a